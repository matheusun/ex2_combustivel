<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e8eaf6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Preco_gaso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/preco_gasolina" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen"
            android:layout_gravity="fill_horizontal"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/vgaso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:padding="@dimen/pad"
            android:text="R$ 0,00" />

        <TextView
            android:id="@+id/Preco_eta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/preco_etanol" />

        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen"
            android:layout_gravity="fill_horizontal"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/veta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:padding="@dimen/pad"
            android:text="R$ 0,00" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:text="@string/total_div" />

        <TextView
            android:id="@+id/total"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="0"
            tools:text="0" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                app:srcCompat="@drawable/download" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/melhorUsar"
                android:layout_width="421dp"
                android:layout_height="67dp"
                android:hint="@string/melhor_opcao" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>